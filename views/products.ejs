<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h2>List Laptop Gaming</h2>

            <% if (msg.length !==0) { %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong><%= msg %> </strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
            <% } %>

            <a href="/product/add" class="btn btn-primary mb-2">Tambah Laptop</a>

            <table class="table table-striped table-bordered border-dark">
                <thead>
                  <tr class="text-bg-dark border-white">
                    <th scope="col">Laptop</th>
                    <th scope="col">CPU</th>
                    <th scope="col">GPU</th>
                    <th scope="col">Display</th>
                  </tr>
                </thead>
                <tbody>
                    <% if (data.length === 0) { %>
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-danger" role="alert">
                                    There is not data
                                </div>
                            </td>
                        </tr>
                    <% } %>
                    <% data.forEach(product => { %>                     
                        <tr>
                          <th scope="row">
                              <a href="/product/<%= product.laptop %>" class="nav-link"><%= product.laptop %></a>
                          </th>
                          <td><%= product.cpu %></td>
                          <td><%= product.gpu %></td>
                          <td><%= product.display %></td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>

        </div>
    </div>
</div>